@{
    Layout = "_LayoutSendiri";
}

<h1>Data Employee</h1>



<div class="container">
    <button id="insert" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalInsert">Insert New Data</button>
    <table id="temployee" class="table table-striped table-hover" >
        <thead class="table-dark">
            <tr>
                <th>NIK</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Birth Date</th>
                <th>Salary</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

<!-- Modal Insert -->
<div class="modal fade" id="modalInsert" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-black text-body" id="exampleModalLabel">Insert Data</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formInsertEmployee" action="" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="nik">NIK</label>
                        <input id="nik" type="text" name="nik" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="fname">First Name</label>
                        <input id="firstName" type="text" name="firstName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="lname">Last Name</label>
                        <input id="lastName" type="text" name="lastName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone</label>
                        <input id="phone" type="text" name="phone" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="date">Birth Date</label>
                        <input id="date" type="date" name="date" class="form-control date">
                    </div>
                    <div class="form-group">
                        <label for="salary">Salary</label>
                        <input id="salary" type="text" name="salary" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input id="email" type="text" name="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select class="form-control" name="gender" id="gender">
                            <option selected disabled>Choose your gender</option>
                            <option value="0">Male</option>
                            <option value="1">Female</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="submit" type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
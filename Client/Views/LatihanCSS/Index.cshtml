<h1>List Pokemon</h1>

<ul id="listPoke"></ul>

<div class="container">
    <table id="example" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>No</th>
                <th>Nama</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="tablePoke">
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="modalPokeDetail" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-15 w-100 text-center" id="namePoke">Nama Pokemon</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="row">
                    <div>
                        <img id="imagePoke" src="">
                        <div id="pokeType" class="text-center">
                        </div>
                        <div class="flavor-text text-center">
                        </div>
                    </div>
                  
                    <div>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab" aria-controls="home" aria-selected="true">Info</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="stat-tab" data-bs-toggle="tab" data-bs-target="#stat" type="button" role="tab" aria-controls="profile" aria-selected="false">Status</button>
                            </li>
                        </ul>

                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" role="tabpanel" id="info" aria-labelledby="info-tab">
                                <div class="row">
                                    <div class="col-3" id="info-head">
                                        <br>
                                        <p>Name</p>
                                        <p>Weight</p>
                                        <p>Height</p>
                                        <p>Type</p>
                                        <p>Habitat</p>
                                    </div>
                                    <div class="col-1" id="info-head">
                                        <br>
                                        <p> :</p>
                                        <p> :</p>
                                        <p> :</p>
                                        <p> :</p>
                                        <p> :</p>
                                    </div>
                                    <div class="col-8" id="info-pokemon">
                                        <br>
                                        <p id="pokeName"></p>
                                        <p id="pokeWeight"></p>
                                        <p id="pokeHeight"></p>
                                        <div id="pokeAbility">
                                        </div>
                                        <p id="habitatPoke"></p>
                                    </div>
                                </div>
                                <div>
                                </div>
                            </div>
                            <div class="tab-pane fade" role="tabpanel" id="stat" aria-labelledby="stat-tab">
                                <table class="table">
                                    <thead class="table">
                                        <tr>
                                            <th width="35%">Status</th>
                                            <th width="65%">Power</th>
                                        </tr>
                                    </thead>
                                    <tbody id="pokeStatus">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>